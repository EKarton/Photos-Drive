{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts"]
}
